# Example of nginx config running on Ec2 instance
# At the moment Ansible does not create this exact config file,
# everything related to SSL is added manually

upstream app {
    # Path to Puma SOCK file, as defined previously
    server unix:////home/ec2-user/adr_docket/shared/sockets/puma.sock fail_timeout=0;
}

server {
    listen 443 ssl; # 'ssl' param is very important

    server_name easyadr.com;

    root /home/ec2-user/adr_docket/current/public;
    access_log  /var/log/nginx/easyadr.access.log; # Good idea to segreate logs per application

    try_files $uri/index.html $uri @app;

    ssl_certificate /home/ec2-user/easyadr.com-ssl-bundle/domain.cert.pem; # These locations must match what's in the certbun config.yml
    ssl_certificate_key /home/ec2-user/easyadr.com-ssl-bundle/private.key.pem;
    ssl_trusted_certificate /home/ec2-user/easyadr.com-ssl-bundle/intermediate.cert.pem;

    location @app { # Magic for now
        proxy_pass http://app;
        proxy_set_header X_FORWARDED_PROTO https;
        proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header  Host $http_host;
        proxy_set_header  X-Url-Scheme $scheme;
        proxy_redirect    off;
        proxy_max_temp_file_size 0;
    }


    error_page 500 502 503 504 /500.html;
    client_max_body_size 4G;
    keepalive_timeout 10;
}

